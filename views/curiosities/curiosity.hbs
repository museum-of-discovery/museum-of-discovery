<h1>{{title}}</h1>

{{#each curiosities}}
<section>
    <h2>{{this.title}}</h2>
    <img src="{{image}}" class="card-img-top" alt="{{title}}">
    <span>
        {{this.date}}
    </span>
    <p> <a href="/curiosities/{{this._id}}">More details</a></p>

     <form action="/curiosities/{{_id}}/delete" method="POST">
        <input type="hidden" name="category" value="{{this.category}}">
        <button>Delete</button>
    </form>

</section>
{{/each}}